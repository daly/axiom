\begin{chunk}{*}
)set break resume
)spool expr.output
)set message test on
)set message auto off
)clear all
 
--S 1 of 29
foo := operator 'foo
--R 
--R
--R   (1)  foo
--R                                                          Type: BasicOperator
--E 1

--S 2 of 29
bar := operator 'bar
--R 
--R
--R   (2)  bar
--R                                                          Type: BasicOperator
--E 2

--S 3 of 29
g := foo x
--R 
--R
--R   (3)  foo(x)
--R                                                    Type: Expression(Integer)
--E 3

--S 4 of 29
eval(g, x = x^2 + 1)
--R 
--R
--R             2
--R   (4)  foo(x  + 1)
--R                                                    Type: Expression(Integer)
--E 4

\end{chunk}
The chain rule can be applied formally
\begin{chunk}{*}
--S 5 of 29
differentiate(%, x)
--R 
--R
--R             ,  2
--R   (5)  2xfoo (x  + 1)
--R
--R                                                    Type: Expression(Integer)
--E 5

\end{chunk}
The multivariate case
\begin{chunk}{*}
--S 6 of 29
f := bar(x, y)
--R 
--R
--R   (6)  bar(x,y)
--R                                                    Type: Expression(Integer)
--E 6

\end{chunk}
Parallel substitution is possible
\begin{chunk}{*}
--S 7 of 29
eval(f, [x = y, y = x])
--R 
--R
--R   (7)  bar(y,x)
--R                                                    Type: Expression(Integer)
--E 7

--S 8 of 29
[differentiate(f, x), differentiate(f, y)]
--R 
--R
--R   (8)  [bar  (x,y),bar  (x,y)]
--R            ,1         ,2
--R                                              Type: List(Expression(Integer))
--E 8

\end{chunk}
The multivariate chain rule
\begin{chunk}{*}
--S 9 of 29
ff := eval(f, [x = x^2 * foo y, y = x + y])
--R 
--R
--R             2
--R   (9)  bar(x foo(y),y + x)
--R                                                    Type: Expression(Integer)
--E 9

--S 10 of 29
differentiate(ff, x)
--R 
--R
--R                2                                2
--R   (10)  bar  (x foo(y),y + x) + 2x foo(y)bar  (x foo(y),y + x)
--R            ,2                               ,1
--R                                                    Type: Expression(Integer)
--E 10

--S 11 of 29
differentiate(ff, y)
--R 
--R
--R                2                 2       2                ,
--R   (11)  bar  (x foo(y),y + x) + x bar  (x foo(y),y + x)foo (y)
--R            ,2                        ,1
--R                                                    Type: Expression(Integer)
--E 11

\end{chunk}
