void ROTATE(float xxR[4][4]) {
  xxR[0][0]= -(cosTheta); 
  xxR[0][1]= -(-sinTheta*cosPhi); 
  xxR[0][2]= -(sinTheta*sinPhi);  
  xxR[0][3]= 0.0; 
  xxR[1][0]= -(sinTheta); 
  xxR[1][1]= -(cosTheta*cosPhi);  
  xxR[1][2]= -(-cosTheta*sinPhi); 
  xxR[1][3]= 0.0; 
  xxR[2][0]= 0.0;         
  xxR[2][1]= -(sinPhi);           
  xxR[2][2]= -(cosPhi);           
  xxR[2][3]= 0.0; 
  xxR[3][0]= 0.0;         
  xxR[3][1]= 0.0;                 
  xxR[3][2]= 0.0;                 
  xxR[3][3]= -(1.0);
}

