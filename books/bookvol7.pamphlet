char *resizeBuffer(int size, char *oldBuf, int *oldSize) {
  char *newBuf;
  int newSize;
  if (size <= *oldSize)
    return oldBuf;
  newSize = size + BufferSlop;
  newBuf = (char *) halloc(newSize,"Buffer");
  memset(newBuf,'\0',newSize);
  if (oldBuf) {
    memcpy(newBuf, oldBuf, *oldSize);
    free(oldBuf);
  }
  *oldSize = newSize;
  return newBuf;
}

