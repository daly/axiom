    for (node = bound_node->data.node; 
         node->type != Endarg; 
         node = node->next) {
       if (node->type == Word) {
            depend = 
              (SpadcomDepend *) halloc(sizeof(SpadcomDepend), "SpadcomDepend");
            depend->label = allocString(node->data.text);
            depend->spadcom = cur_spadcom;
            depend->executed = 0;
