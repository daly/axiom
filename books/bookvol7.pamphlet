static void parseCondnode(void) {
    getToken();
    switch (token.type) {
      case Cond:
        curr_node->type = Cond;
        curr_node->data.text = allocString(token.id);
        break;
      case Haslisp:
      case Hasreturn:
      case Lastwindow:
      case Hasup:
        curr_node->type = token.type;
        break;
      case Boxcond:
        curr_node->type = Boxcond;
        curr_node->data.text = allocString(token.id);
        break;
      case Hasreturnto:
        parseHasreturnto();
        break;
      default:
        {
            char eb[128];
            tokenName(token.type);
            sprintf(eb, "Unexpected Token %s\n", eb);
            tpderror(eb, HTCONDNODE);
        }
        break;
    }
}

