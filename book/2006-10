+ (format t "~&~a: " 'modemaps)
   (pprint (getdatabase constructor 'modemaps))
- (format t "~a: ~a~%" 'hascategory
+ (format t "~&~a: ~a~%" 'hascategory
   (getdatabase constructor 'hascategory))
