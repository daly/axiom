> > > +  struct stat ss;
> > > +  
> > > +
> > > +  bzero(filename,sizeof(filename));
> > > +  coerce_to_filename(path,filename);
> > > +  if (lstat(filename,&ss))
> > > +    RETURN1(Cnil);
> > > +  else {
> > > +    int j;
> > > +    ctime_r(&ss.st_ctime,filename);
