+++ axiom/src/etc/Makefile.pamphlet	2006-10-25 21:44:56.000000000 +0200
@@ -34,6 +34,8 @@
 	@ (cd ${INT}/algebra ; \
            echo ')lisp (make-databases "" nil)' | ${INTERPSYS} )
