  \subsection{The GCL-2.6.8pre stanza}
  <<gcl-2.6.8pre>>=
! # Rules for building GCL from Axiom distribution.
! gcl-2.6.8predir: 
  	@tar -zxf ${ZIPS}/${GCLVERSION}.tgz
