- gcldir: 
- 	@echo 2 building ${GCLVERSION}
- 	@tar -zxf ${ZIPS}/${GCLVERSION}.tgz
- <<gcl-2.6.8pre.socket.patch>>
- <<gcl-2.6.8pre.libspad.patch>>
