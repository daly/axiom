- host_alias = @host_alias@
- build = @build@
- build_alias = @build_alias@
- target = @target@
- target_alias = @target_alias@
- 
- srcdir = @srcdir@
- top_srcdir = @top_srcdir@
- abs_srcdir = @abs_srcdir@
- 
- builddir = @builddir@
- abs_top_builddir = @abs_top_builddir@
- datadir = @datadir@
- 
- AR = @AR@
- CC = @CC@
- CFLAGS = @CFLAGS@
- 
- AUTOCONF = autoconf
- AWK = @AWK@
- INSTALL = @INSTALL@
- PATCH = @PATCH@
- RANLIB = @RANLIB@
- TAR = @TAR@
