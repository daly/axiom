>         import {
> -               BOOT_:_:DNameToSExpr: SExpression -> SExpression;
>                 BOOT_:_:hashString: SExpression -> SExpression;
> +                BOOT_:_:devaluate: SExpression -> SExpression;
>         } from Foreign Lisp;
> 
>         Rep  ==> Type;
> @@ -51,12 +51,12 @@
> 
