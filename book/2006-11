[page@axiom-developer scripts]$ cat test2
)clear all
x1:=3D4
m1:=3D5
x2:=3D2
m2:=3D3
result:=3DchineseRemainder(x1,m1,x2,m2)
expected:=3D14
if (result-expected ~=3D0) then print "DALY BUG"

)clear completely

inverse:(INT,INT)->INT

inverse(a,b) =3D=3D
  borg:INT:=3Db
  c1:INT :=3D 1
  d1:INT :=3D 0
  while b ~=3D 0 repeat
    q :=3D a quo b
    r :=3D a-q*b
    print [a, "=3D", q, "*(", b, ")+", r]
    (a,b):=3D(b,r)
    (c1,d1):=3D(d1,c1-q*d1)
  a ~=3D 1 =3D> error("moduli are not relatively prime")
  positiveRemainder(c1,borg)

if ((inverse(26,15)*26)::IntegerMod(15) ~=3D 1) then print "DALY BUG"
if ((inverse(15,26)*15)::IntegerMod(26) ~=3D 1) then print "DALY BUG"

