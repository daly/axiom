sum (n^2 * x^n,                         n=3D0..%plusInfinity) -- YES
sum (n^3 * x^n,                         n=3D0..%plusInfinity) -- YES

sum (x^n / (2*n-1),                     n=3D1..%plusInfinity) -- no

sum (1 / (n+1) / (n+3),                 n=3D0..%plusInfinity) -- YES
sum (x^n / (n+1) / (n+3),               n=3D0..%plusInfinity) -- no

sum (1 / (4*n^2-1),                     n=3D0..%plusInfinity) -- YES
