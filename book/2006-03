Monoid(T: Type, m: (T, T) -> T): Category == with {
   square: T-> T;
   default {square(t: T): T == m(t, t)}
}

Word: BasicType == add {
   add {*(a: %, b: %):%  == concat(a,b) }

extend Word: Monoid(Word, *) == add;

??? If this is the case, I know what I want!!!

