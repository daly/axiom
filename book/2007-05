> (eval-when
>  (compile eval)
>  (defmacro defdl (sym)
>    (let* ((sym  (si::mdlsym (string-downcase sym) "libm.so"))
> =09  (fsym (si::mdlsym (concatenate 'string (string sym) "f") "libm.so"=
)))
>    `(progn
>       (defun ,sym  (x) (si::dl-double-to-double ',sym x))
>       (defun ,fsym (x) (si::dl-float-to-float   ',fsym x)))))) 
> 
