! (EVAL-WHEN (:EXECUTE :LOAD-TOPLEVEL) (SETQ |shoeTAB| 9))
  
! (EVAL-WHEN (:EXECUTE :LOAD-TOPLEVEL) 
!   (SETQ |shoeDict| (|shoeDictCons|)))
  
! (EVAL-WHEN (:EXECUTE :LOAD-TOPLEVEL) (SETQ |shoePun| (|shoePunCons|)))
  
