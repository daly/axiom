 #define bfd_section_name(bfd, ptr) ((ptr)->name)
-#define bfd_section_size(bfd, ptr) ((ptr)->_raw_size)
-/*#define bfd_section_size(bfd, ptr) (bfd_get_section_size_before_reloc(ptr))*/
+#define bfd_section_size(bfd, ptr) (bfd_get_section_size_before_reloc(ptr))
