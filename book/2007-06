	vs_top=3Dsup;
	V33=3D lf(({register object _z=3Dvs_base[0];_z;}));
	V23=3D V33;
	goto T63;}
	V23=3D lf(Cnil);
	goto T63;}
	V23=3D lf(Cnil);}}
	/* END (FLOAT (REALPART X) 0.0)*/
	goto T63;
T63:;
	/*(FLOAT (IMAGPART X) 0.0)*/
	{register object V35;
	register double V36;
	{object V37;
	/*(IMAGPART X)*/
	{register object V38;
	V38=3D (V4);
	{register object V39;
	V39=3D (V38);
	/*(CNUM-TYPE X)*/
	{register object V29;
	V29=3D (V39);switch((fixnum)type_of(((V29))->cmp.cmp_real)){
	default:
	goto T104;
T104:;
	goto T102;
	goto T102;}}
	/* END (CNUM-TYPE X)*/
	goto T102;
T102:;
	V37=3D ((V39))->cmp.cmp_imag;}}
	/* END (IMAGPART X)*/
	V35=3DV37;}
	V36=3D lf(((object)VV[2]));
	V36=3D lf(((object)VV[2]));
	{register object V40;
	V40=3D (V35);
	/*(CNUM-TYPE X)*/
	{register object V16;
	V16=3D (V40);
	{register fixnum V17;
	V17=3D (fixnum)type_of((V16));
	V41=3D V17;}}
	/* END (CNUM-TYPE X)*/switch(V41){
	case 1:
	goto T118;
T118:;
	V34=3D (    1.    )*(fix((V40)));
	goto T97;
	case 2:
	goto T119;
T119:;
	{register double V42;
	V42=3D big_to_double((V40));
	V34=3D V42;
	goto T97;}
	case 3:
	goto T120;
T120:;
	{register double V43;
	base[0]=3D (V40);
	vs_top=3D(vs_base=3Dbase+0)+1;
	(void) (*Lnk8)();
	vs_top=3Dsup;
	V43=3D lf(({register object _z=3Dvs_base[0];_z;}));
	V34=3D V43;
	goto T97;}
	V34=3D lf(Cnil);
	goto T97;}
	V34=3D lf(Cnil);}}
	/* END (FLOAT (IMAGPART X) 0.0)*/
	goto T97;
T97:;   *** V23 + I * V34 is the C expression generating the complex
        *** from two reals
	{object V44 =3D make_dcomplex(((dcomplex(*)(dcomplex))dlcsin)((V23 + I * V=
34)));VMR1
	(V44);}
	{object V45 =3D Cnil;VMR1
	(V45);}}
	{object V46 =3D Cnil;VMR1
	(V46);}}
	base[0]=3Dbase[0];
	return Cnil;
}
static void LnkT8(){ call_or_link(((object)VV[8]),0,(void **)(void *)&Lnk8)=
;} /* RATIO-TO-DOUBLE */
