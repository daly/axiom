static dcomplex LI1(V4,V5,V6)

dcomplex V4;dcomplex V5;double V6;
{	 VMB1 VMS1 VMV1
	goto TTL;
TTL:;   *** unboxed C multiplication etc.
	{dcomplex V7 =3D (V6)*((V6)+((V4)*((V4)+(V5))));VMR1
	(V7);}
