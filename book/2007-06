martin@rubey-laptop:~/aldor-test$ ./extend
Hi there!

-------------------------------------------------------------------------------
#include "aldor"
#include "aldorio"

f(i: Integer): String == {
        import from Integer;
        foo i;
}

extend Integer: with {
        foo: % -> String;
} == add {
        foo(i: %): String == "Hi there!";
}

main(): () == {
        import from Integer, Character, TextWriter;
        stdout << f(1) << newline;
}

main()




