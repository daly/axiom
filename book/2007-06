	V14= (V18);}
	goto T20;
	goto T23;
T23:;
	goto T16;
	goto T16;}}
	/* END (MEMBER ITEM LIST TEST 'FUNCALL KEY KEY)*/}
	/* END (MEMBER-IF 'ENDP L)*/
	goto T17;
T17:;
	goto T11;
	goto T16;
T16:;
	{register object V19;
	register object V20;
