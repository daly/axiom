        done
-       echo '(load "makedep.lisp") (BOOT::spad-save "$@" nil)' | ${LISPSYS}
+       echo '(load "makedep.lisp") (BOOT::spad-save "$(BASE)$@" nil)'
| ${LISPSYS}
        @ echo 4 ${DEPSYS} created
 @

