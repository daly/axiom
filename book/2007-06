/*	global entry for the function CMP-ANON	*/

static void L1()
{	register object *base=3Dvs_base;
	base[0]=3Dmake_dcomplex(LI1(lfc(base[0]),lfc(base[1]),lf(base[2])));
	vs_top=3D(vs_base=3Dbase)+1;
}
#(#((%INIT
     . #((LET ((*DISABLE-RECOMPILE* T))
           (MF 'CMP-ANON 0)
