>   bb:   5b                      pop    %ebx
>   bc:   5e                      pop    %esi
>   bd:   5f                      pop    %edi
>   be:   89 e8                   mov    %ebp,%eax
>   c0:   5d                      pop    %ebp
>   c1:   c3                      ret    
> 
> 000000c2 <LnkTLI0>:
>   c2:   8d 44 24 08             lea    0x8(%esp),%eax
>   c6:   50                      push   %eax
>   c7:   ff 74 24 08             pushl  0x8(%esp)
>   cb:   68 08 00 00 00          push   $0x8
>   d0:   6a 20                   push   $0x20
>   d2:   6a 00                   push   $0x0
>   d4:   ff 35 00 00 00 00       pushl  0x0
>   da:   e8 fc ff ff ff          call   db <LnkTLI0+0x19>
>   df:   83 c4 18                add    $0x18,%esp
>   e2:   c3                      ret    
> NIL
> 
> 
