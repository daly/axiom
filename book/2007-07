>         if(!((V3)==(((object)VV[0])))){
>         goto T2;}
>         {object V5 = ((object)VV[1]);VMR1
>         (V5);}
>         goto T2;
> T2:;
>         {object V6 = Cnil;VMR1
>         (V6);}
>         return Cnil;
