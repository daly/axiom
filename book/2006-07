> >   	import from X;
> >   	stdout << foo() << newline;
> >   	stdout << foo() << newline;
> >   	stdout << foo() << newline;
> >   	stdout << foo() << newline;
> >   	stdout << foo() << newline;
> >   	stdout << foo() << newline;
> >   }
